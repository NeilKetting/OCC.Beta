<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OCC.Client.Features.HelpHub.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="OCC.Client.Features.HelpHub.Views.ReleaseNotesView"
             x:DataType="vm:ReleaseNotesViewModel">

    <Design.DataContext>
        <vm:ReleaseNotesViewModel/>
    </Design.DataContext>

    <Grid Background="#202020">
        <Border Background="White" CornerRadius="12" Width="700" VerticalAlignment="Stretch" Margin="40" HorizontalAlignment="Center" BoxShadow="0 10 30 0 #50000000">
            <Grid RowDefinitions="Auto, *, Auto" Margin="30">
                <!-- Header -->
                <Grid RowDefinitions="Auto, Auto" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                        <PathIcon Data="{StaticResource IconHelp}" Width="24" Height="24" Foreground="{DynamicResource PrimaryTeal}"/>
                        <TextBlock Text="Release Notes &amp; Updates" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryDark}"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Track the latest improvements and changes to the application." 
                               FontSize="14" Foreground="{DynamicResource TextSecondaryGray}" Margin="39,5,0,0"/>
                </Grid>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="{DynamicResource BorderGray}" Margin="0,10,0,0"/>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" Padding="0,20,20,20" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ReleaseNotes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,30">
                                    <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,10">
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="{Binding Version}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryDark}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="14" Foreground="{DynamicResource TextSecondaryGray}"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{DynamicResource BackgroundLight}" CornerRadius="6" Padding="10,5" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Date}" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextTertiarySlate}"/>
                                        </Border>
                                    </Grid>
                                    
                                    <ItemsControl ItemsSource="{Binding Changes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="Auto, *">
                                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource PrimaryTeal}" VerticalAlignment="Top" Margin="5,8,15,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding}" TextWrapping="Wrap" FontSize="14" Foreground="#374151" Margin="0,0,0,8"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Footer -->
                <Button Grid.Row="2" Command="{Binding CloseCommand}" Content="Close" Classes="Primary" HorizontalAlignment="Right" Width="100"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
