<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OCC.Client.Features.MobileHub.ViewModels.Shells"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="700"
             x:Class="OCC.Client.Features.MobileHub.Views.Shells.MobileShellTabView"
             x:DataType="vm:MobileShellTabViewModel">
    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Background="White" BorderBrush="{DynamicResource BorderGray}" BorderThickness="0,0,0,1">
            <StackPanel>
                <Grid ColumnDefinitions="*, Auto" Padding="15">
                    <TextBlock Text="OCC MOBILE" FontWeight="Bold" Foreground="{DynamicResource PrimaryTeal}" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Command="{Binding ExitShellCommand}" Background="Transparent" BorderThickness="0">
                        <PathIcon Data="{StaticResource IconGear}" Width="20" Height="20" Foreground="{DynamicResource TextSecondaryGray}"/>
                    </Button>
                </Grid>
                
                <UniformGrid Columns="2" Height="50">
                    <Button Command="{Binding NavigateToDashboardCommand}" Classes="TabButton" IsEnabled="{Binding CurrentView, Converter={StaticResource NullToBoolConverter}}" 
                            Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Text="Dashboard" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </Button>
                    <Button Command="{Binding NavigateToRollCallCommand}" Classes="TabButton"
                            Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Text="Roll Call" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </Button>
                </UniformGrid>
            </StackPanel>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</UserControl>
