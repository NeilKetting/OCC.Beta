<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OCC.Client.Features.MobileHub.ViewModels"
             xmlns:models="using:OCC.Client.Features.MobileHub.Models"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="700"
             x:Class="OCC.Client.Features.MobileHub.Views.MobileLayoutSelectorView"
             x:DataType="vm:MobileLayoutSelectorViewModel">
    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Padding="30,50,30,30" Background="{DynamicResource PrimaryTeal}">
            <StackPanel Spacing="10">
                <TextBlock Text="Mobile Layouts" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Choose a navigation style for your Android experience." 
                           Foreground="#CCFFFFFF" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="15">
                
                <Button Command="{Binding SelectLayoutCommand}" CommandParameter="{x:Static models:MobileLayoutType.BottomNavigation}"
                        HorizontalAlignment="Stretch" Padding="0" Background="Transparent" BorderThickness="0">
                    <Border Background="White" CornerRadius="12" Padding="20" BoxShadow="0 4 10 0 #15000000">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <PathIcon Data="{StaticResource IconList}" Width="32" Height="32" Foreground="{DynamicResource PrimaryTeal}"/>
                            <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                <TextBlock Text="Bottom Navigation" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Standard mobile apps with icons at the bottom." FontSize="12" Foreground="{DynamicResource TextSecondaryGray}"/>
                            </StackPanel>
                            <PathIcon Grid.Column="2" Data="{StaticResource IconChevronRight}" Width="16" Height="16" Foreground="{DynamicResource BorderGray}"/>
                        </Grid>
                    </Border>
                </Button>

                <Button Command="{Binding SelectLayoutCommand}" CommandParameter="{x:Static models:MobileLayoutType.SideDrawer}"
                        HorizontalAlignment="Stretch" Padding="0" Background="Transparent" BorderThickness="0">
                    <Border Background="White" CornerRadius="12" Padding="20" BoxShadow="0 4 10 0 #15000000">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <PathIcon Data="{StaticResource IconMenu}" Width="32" Height="32" Foreground="{DynamicResource PrimaryTeal}"/>
                            <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                <TextBlock Text="Side Drawer" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Hamburger menu for more screen real estate." FontSize="12" Foreground="{DynamicResource TextSecondaryGray}"/>
                            </StackPanel>
                            <PathIcon Grid.Column="2" Data="{StaticResource IconChevronRight}" Width="16" Height="16" Foreground="{DynamicResource BorderGray}"/>
                        </Grid>
                    </Border>
                </Button>

                <Button Command="{Binding SelectLayoutCommand}" CommandParameter="{x:Static models:MobileLayoutType.TabbedDashboard}"
                        HorizontalAlignment="Stretch" Padding="0" Background="Transparent" BorderThickness="0">
                    <Border Background="White" CornerRadius="12" Padding="20" BoxShadow="0 4 10 0 #15000000">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <PathIcon Data="{StaticResource IconDashboard}" Width="32" Height="32" Foreground="{DynamicResource PrimaryTeal}"/>
                            <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                <TextBlock Text="Tabbed Dashboard" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Quick tabs at the top for core features." FontSize="12" Foreground="{DynamicResource TextSecondaryGray}"/>
                            </StackPanel>
                            <PathIcon Grid.Column="2" Data="{StaticResource IconChevronRight}" Width="16" Height="16" Foreground="{DynamicResource BorderGray}"/>
                        </Grid>
                    </Border>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
