<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:OCC.Shared.Models"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="OCC.Client.Features.TimeAttendanceHub.Views.EmployeeLeaveDialog"
        Title="Edit Leave Request"
        Width="500" SizeToContent="Height" WindowStartupLocation="CenterOwner"
        CanResize="False" SystemDecorations="BorderOnly"
        Background="Transparent"
        TransparencyLevelHint="Transparent">

    <Border Background="White" CornerRadius="8" BorderBrush="{DynamicResource BorderGray}" BorderThickness="1" Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="Edit Leave Request" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
            
            <TextBlock Text="Update the details of the employee's leave request below." 
                       TextWrapping="Wrap" Foreground="{DynamicResource TextSecondary}"/>

            <StackPanel Spacing="5">
                <TextBlock Text="Start Date" FontWeight="Medium"/>
                <CalendarDatePicker x:Name="StartDatePicker" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="End Date" FontWeight="Medium"/>
                <CalendarDatePicker x:Name="EndDatePicker" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Leave Type" FontWeight="Medium"/>
                <ComboBox x:Name="LeaveTypeComboBox" HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Reason" FontWeight="Medium"/>
                <TextBox x:Name="ReasonTextBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap" Watermark="Provide a reason..."/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel" Click="OnCancelClick" Classes="SecondaryButton" Theme="{StaticResource SecondaryButton}"/>
                <Button Content="Save" Click="OnSaveClick" Classes="PrimaryButton" Theme="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
