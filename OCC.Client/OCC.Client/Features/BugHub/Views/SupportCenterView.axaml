<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OCC.Client.Features.BugHub.ViewModels;assembly=OCC.Client"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="OCC.Client.Features.BugHub.Views.SupportCenterView"
             x:DataType="vm:SupportCenterViewModel">

    <Grid RowDefinitions="Auto, *">
        <!-- HEADER / SEARCH -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryTealGradient}" Padding="40,30">
            <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Center">
                <TextBlock Text="How can we help you today?" 
                           Classes="H1" Foreground="White" FontSize="32" HorizontalAlignment="Center"/>
                
                <Grid>
                    <TextBox Text="{Binding SearchText}" Watermark="Find a solution (e.g., 'How to create a project'...)"
                             Classes="FormInput" CornerRadius="30" Height="50" Padding="50,0,20,0"
                             Background="White" BorderThickness="0" FontSize="16">
                        <TextBox.InnerLeftContent>
                            <PathIcon Data="{StaticResource IconSearch}" Width="18" Height="18" Margin="20,0,0,0"
                                      Foreground="{DynamicResource TextTertiarySlate}"/>
                        </TextBox.InnerLeftContent>
                    </TextBox>
                </Grid>
                
                <TextBlock Text="We've fixed 124 issues recently. Maybe we already have an answer!"
                           Foreground="White" Opacity="0.8" HorizontalAlignment="Center" FontSize="13"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" ColumnDefinitions="*, 400" Margin="40">
            <!-- LEFT: MY ISSUES / SEARCH RESULTS -->
            <StackPanel Spacing="30" Grid.Column="0" Margin="0,0,40,0">
                <Grid ColumnDefinitions="*, Auto">
                    <TextBlock Text="{Binding SearchText, Converter={StaticResource StringToTitleCaseConverter}, StringFormat='Results for {0}'}" 
                               IsVisible="{Binding IsSearching}" Classes="H2"/>
                    <TextBlock Text="My Active Feedback" IsVisible="{Binding !IsSearching}" Classes="H2"/>
                    
                    <Button Grid.Column="1" Command="{Binding LoadDataCommand}" Classes="IconButton">
                        <PathIcon Data="{StaticResource IconHistory}" Width="16" Height="16"/>
                    </Button>
                </Grid>

                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding MyIssues}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding $parent[UserControl].((vm:SupportCenterViewModel)DataContext).SelectIssueCommand}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent" Padding="0" Margin="0,0,20,20" BorderThickness="0">
                                    <Border Width="300" Height="180" Background="White" CornerRadius="12" Padding="20"
                                            BoxShadow="0 4 20 0 #10000000">
                                        <Grid RowDefinitions="Auto, *, Auto">
                                            <Grid ColumnDefinitions="*, Auto">
                                                <TextBlock Text="{Binding ViewName}" Classes="LabelXSM" Foreground="{DynamicResource PrimaryTeal}"/>
                                                <Border Grid.Column="1" CornerRadius="4" Padding="6,2" 
                                                        Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                                    <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Grid.Row="1" Text="{Binding Description}" MaxLines="3" TextTrimming="CharacterEllipsis"
                                                       FontSize="14" Margin="0,10" VerticalAlignment="Top"/>

                                            <Grid Grid.Row="2" ColumnDefinitions="Auto, *">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <PathIcon Data="{StaticResource IconChat}" Width="12" Height="12" Opacity="0.5"/>
                                                    <TextBlock Text="{Binding Comments.Count}" FontSize="12" Opacity="0.5"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding ReportedDate, StringFormat='{}{0:MMM dd}'}" 
                                                           HorizontalAlignment="Right" FontSize="11" Opacity="0.4"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- RIGHT: KNOWLEDGE BASE / HELPFUL LINKS -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceGrayLight}" CornerRadius="12" Padding="25">
                <StackPanel Spacing="25">
                    <TextBlock Text="Knowledge Base" Classes="H3"/>
                    
                    <ItemsControl ItemsSource="{Binding SolvedIssues}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,15" Background="White" CornerRadius="8" Padding="15">
                                    <StackPanel Spacing="8">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <TextBlock Text="{Binding ViewName}" FontWeight="SemiBold" FontSize="13"/>
                                            <PathIcon Grid.Column="1" Data="{StaticResource IconCheckCircle}" Width="14" Height="14" Foreground="#10B981"/>
                                        </Grid>
                                        <TextBlock Text="{Binding Description}" MaxLines="2" TextTrimming="CharacterEllipsis"
                                                   FontSize="12" Opacity="0.7"/>
                                        <Button Classes="Ghost" Padding="0" HorizontalAlignment="Left"
                                                Command="{Binding $parent[UserControl].((vm:SupportCenterViewModel)DataContext).SelectIssueCommand}"
                                                CommandParameter="{Binding}">
                                            <TextBlock Text="View Solution â†’" FontSize="11" Foreground="{DynamicResource PrimaryTeal}"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border BorderBrush="{DynamicResource BorderGray}" BorderThickness="0,1,0,0" Padding="0,20,0,0">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Need something else?" FontWeight="SemiBold"/>
                            <Button Classes="Primary" Content="Contact Neil Directly" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- OVERLAY: DETAIL VIEW -->
        <Border Grid.RowSpan="2" Background="#80000000" IsVisible="{Binding IsDetailViewVisible}">
            <Border Background="White" Width="600" VerticalAlignment="Stretch" HorizontalAlignment="Right"
                    BoxShadow="-10 0 40 0 #20000000">
                <Grid RowDefinitions="Auto, *, Auto">
                    <!-- Detail Header -->
                    <Border Grid.Row="0" Padding="30,20" BorderBrush="{DynamicResource BorderGray}" BorderThickness="0,0,0,1">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding SelectedIssue.ViewName}" Classes="H2"/>
                                <TextBlock Text="{Binding SelectedIssue.ReportedDate, StringFormat='{}Reported on {0:MMM dd, yyyy}'}" 
                                           Classes="LabelXSM" Opacity="0.5"/>
                            </StackPanel>
                            <Button Grid.Column="1" Command="{Binding CloseDetailCommand}" Classes="IconButton">
                                <PathIcon Data="{StaticResource IconX}" Width="18" Height="18"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Scrollable Conversation -->
                    <ScrollViewer Grid.Row="1">
                        <Border Padding="30">
                            <StackPanel Spacing="25">
                            <Border Background="#F1F5F9" CornerRadius="12" Padding="20">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="ORIGINAL ISSUE" Classes="LabelXSM" Foreground="{DynamicResource PrimaryTeal}"/>
                                    <TextBlock Text="{Binding SelectedIssue.Description}" TextWrapping="Wrap" FontSize="15"/>
                                </StackPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding SelectedIssue.Comments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" 
                                                    HorizontalAlignment="{Binding IsDevComment, Converter={StaticResource InvertBoolConverter}, ConverterParameter=Stretch}">
                                            <!-- Simple message bubble style -->
                                            <Border CornerRadius="8" Padding="15,10" MaxWidth="400"
                                                    Background="{Binding IsDevComment, Converter={StaticResource TypeToColorConverter}, ConverterParameter='CommentBg'}">
                                                <StackPanel Spacing="5">
                                                    <TextBlock Text="{Binding AuthorName}" FontWeight="Bold" FontSize="11" 
                                                               Foreground="{Binding IsDevComment, Converter={StaticResource TypeToColorConverter}, ConverterParameter='CommentFg'}" Opacity="0.8"/>
                                                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="13" 
                                                               Foreground="{Binding IsDevComment, Converter={StaticResource TypeToColorConverter}, ConverterParameter='CommentFg'}"/>
                                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:HH:mm}'}" FontSize="9" 
                                                               Foreground="{Binding IsDevComment, Converter={StaticResource TypeToColorConverter}, ConverterParameter='CommentFg'}" Opacity="0.6" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </ScrollViewer>

                    <!-- User Actions -->
                    <Border Grid.Row="2" Padding="30,20" BorderBrush="{DynamicResource BorderGray}" BorderThickness="0,1,0,0">
                        <StackPanel Spacing="15">
                            <TextBox Text="{Binding NewCommentText}" Watermark="Provide more feedback..." 
                                     AcceptsReturn="True" Height="80" Classes="FormInput"/>
                            <Grid ColumnDefinitions="Auto, *, Auto">
                                <Button Command="{Binding MarkAsFixedCommand}" Classes="Success" Padding="20,8"
                                        IsVisible="{Binding SelectedIssue.Status, Converter={StaticResource StringEqualityConverter}, ConverterParameter='Fixed'}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon Data="{StaticResource IconCheck}" Width="14" Height="14"/>
                                        <TextBlock Text="Yes, it's fixed!" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                                <Button Grid.Column="2" Command="{Binding SendFeedbackCommand}" Classes="Primary" Content="Send Feedback" Padding="20,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
