<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OCC.Client.Features.ProjectsHub.ViewModels"
             xmlns:dtos="clr-namespace:OCC.Shared.DTOs;assembly=OCC.Shared"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
             x:Class="OCC.Client.Features.ProjectsHub.Views.ProjectReportView"
             x:DataType="vm:ProjectReportViewModel">
    
    <Grid RowDefinitions="Auto, Auto, Auto, *" Margin="20" Background="{DynamicResource AppBackgroundSlate}">
        
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,20">
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding Title}" Classes="H1" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                    <TextBlock Text="Client:" Foreground="Gray"/>
                    <TextBlock Text="{Binding Report.ClientName}" FontWeight="SemiBold"/>
                    <TextBlock Text=" | " Foreground="Gray"/>
                    <TextBlock Text="Status:" Foreground="Gray"/>
                    <TextBlock Text="{Binding Report.Status}" Foreground="{DynamicResource PrimaryTeal}"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Top">
                <Button Command="{Binding RefreshCommand}" ToolTip.Tip="Refresh Data">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <PathIcon Data="{StaticResource IconRefresh}" Width="16" Height="16"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding PrintCommand}" Classes="Primary" ToolTip.Tip="Generate PDF">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <PathIcon Data="{StaticResource IconPrint}" Width="16" Height="16"/>
                        <TextBlock Text="Print"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Summary KPI Cards -->
        <Grid Grid.Row="1" ColumnDefinitions="*, *, *" Margin="0,0,0,20">
            <!-- Material Cost -->
            <Border Grid.Column="0" Classes="Card" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Material Cost" Foreground="Gray" FontSize="12"/>
                    <TextBlock Text="{Binding Report.TotalMaterialCost, StringFormat='R {0:N2}'}" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                    <ProgressBar Value="100" Height="4" Margin="0,10,0,0" Foreground="{DynamicResource Orange}"/>
                </StackPanel>
            </Border>

            <!-- Labour Cost -->
            <Border Grid.Column="1" Classes="Card" Margin="10,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Labour Cost" Foreground="Gray" FontSize="12"/>
                    <TextBlock Text="{Binding Report.TotalLabourCost, StringFormat='R {0:N2}'}" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                    <ProgressBar Value="100" Height="4" Margin="0,10,0,0" Foreground="{DynamicResource PrimaryTeal}"/>
                </StackPanel>
            </Border>

            <!-- Total Cost -->
            <Border Grid.Column="2" Classes="Card" Margin="10,0,0,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Project Spend" Foreground="Gray" FontSize="12"/>
                    <TextBlock Text="{Binding Report.TotalProjectCost, StringFormat='R {0:N2}'}" FontSize="24" FontWeight="Bold" Margin="0,5,0,0" Foreground="{DynamicResource PrimaryTeal}"/>
                    <ProgressBar Value="100" Height="4" Margin="0,10,0,0" Foreground="{DynamicResource PrimaryTeal}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content (Tables) -->
        <Grid Grid.Row="3" ColumnDefinitions="*, *" ColumnSpacing="20">
            <!-- Linked Orders -->
            <Border Grid.Column="0" Classes="Card" Padding="0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="{DynamicResource BorderGray}" Padding="15,10">
                        <TextBlock Text="Orders &amp; Materials" FontWeight="SemiBold"/>
                    </Border>
                    <DataGrid ItemsSource="{Binding Report.LinkedOrders}"
                               IsReadOnly="True"
                               GridLinesVisibility="Horizontal"
                               Margin="0"
                               BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order #" Binding="{Binding OrderNumber}" Width="110"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat='d'}" Width="90"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding OrderType}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="110"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat='R {0:N2}'}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Labour Breakdown -->
            <Border Grid.Column="1" Classes="Card" Padding="0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="{DynamicResource BorderGray}" Padding="15,10">
                        <TextBlock Text="Labour Breakdown" FontWeight="SemiBold"/>
                    </Border>
                    <DataGrid ItemsSource="{Binding Report.LabourBreakdown}"
                               IsReadOnly="True"
                               GridLinesVisibility="Horizontal"
                               Margin="0"
                               BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                            <DataGridTextColumn Header="Hours" Binding="{Binding Hours}" Width="80"/>
                            <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate, StringFormat='R {0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalCost, StringFormat='R {0:N2}'}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" Background="#AAFFFFFF" IsVisible="{Binding IsBusy}" Margin="-20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="{Binding BusyText}" HorizontalAlignment="Center" Foreground="Black"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
