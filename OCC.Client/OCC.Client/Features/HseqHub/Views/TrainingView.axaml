<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:OCC.Client.Features.HseqHub.ViewModels"
             xmlns:conv="clr-namespace:OCC.Client.Converters"
             xmlns:models="using:OCC.Shared.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OCC.Client.Features.HseqHub.Views.TrainingView"
             x:DataType="vm:TrainingViewModel">

    <UserControl.Resources>
        <conv:BoolToTextConverter x:Key="BoolToTextConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource AppBackgroundSlate}">
        <Grid RowDefinitions="Auto, *">
            <!-- Header -->
            <!-- Header Bar: Title -->
            <Border Grid.Row="0" Margin="2" Background="{DynamicResource MainPageGradient}" Classes="TopHeader">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <PathIcon Data="{StaticResource IconManageEmployees}" Width="24" Height="24" Foreground="{DynamicResource PrimaryTeal}"/>
                        <TextBlock Text="Training Matrix" Classes="H1" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Table -->
            <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="10">
                
                <!-- Main List -->
                <Border Grid.Column="0" Classes="Card" Margin="0,0,10,0">
                    <Grid RowDefinitions="Auto, *">
                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10">
                             <TextBlock Text="Category:" VerticalAlignment="Center"/>
                             <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding CategoryFilter}" Width="120"/>
                             <Separator Classes="Vertical" Margin="5,0"/>
                             <TextBlock Text="Expiry Warning (Days):" VerticalAlignment="Center"/>
                             <NumericUpDown Value="{Binding ExpiryWarningDays}" Minimum="1" Maximum="365" Width="100"/>
                             <Button Content="Show Expiring" Command="{Binding FilterExpiringCommand}" Classes="Secondary"/>
                             <Button Content="Reset/Reload" Command="{Binding LoadDataCommand}" Classes="Ghost"/>
                             <Button Content="+ Add Training" Command="{Binding ToggleAddCommand}" Classes="Primary" Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding TrainingRecords}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          DoubleTapped="DataGrid_DoubleTapped">
                        <DataGrid.Styles>
                            <Style Selector="DataGridRow">
                                <Setter Property="ContextMenu">
                                    <ContextMenu x:DataType="vm:TrainingRecordViewModel">
                                        <MenuItem Header="Edit Record" 
                                                  Command="{Binding $parent[UserControl].((vm:TrainingViewModel)DataContext).EditRecordCommand}" 
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <PathIcon Data="{StaticResource IconEdit}" Width="16" Height="16"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="View Certificate" 
                                                  Command="{Binding $parent[UserControl].((vm:TrainingViewModel)DataContext).ViewCertificateCommand}" 
                                                  CommandParameter="{Binding}"
                                                  IsEnabled="{Binding HasCertificate}">
                                            <MenuItem.Icon>
                                                <PathIcon Data="{StaticResource IconView}" Width="16" Height="16"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Delete Record" 
                                                  Command="{Binding $parent[UserControl].((vm:TrainingViewModel)DataContext).DeleteRecordCommand}" 
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <PathIcon Data="{StaticResource IconDelete}" Foreground="Red"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Setter>
                            </Style>
                        </DataGrid.Styles>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*" MinWidth="180"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="Auto"/>
                        <DataGridTextColumn Header="Topic" Binding="{Binding TrainingTopic}" Width="Auto"/>
                        <DataGridTextColumn Header="Issue Date" Binding="{Binding DateCompleted, StringFormat='d MMM yyyy'}" Width="Auto"/>
                        <DataGridTextColumn Header="Expiry Date" Binding="{Binding ValidUntil, StringFormat='d MMM yyyy'}" Width="Auto"/>
                        <DataGridTextColumn Header="Validity" Binding="{Binding ValidityStatus}" Width="Auto"/>
                        <DataGridTextColumn Header="Trainer" Binding="{Binding Trainer}" Width="Auto"/>

                        <!-- Actions -->
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Classes="IconBtn" 
                                                Command="{Binding $parent[UserControl].((vm:TrainingViewModel)DataContext).EditRecordCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Edit Record">
                                            <PathIcon Data="{StaticResource IconEdit}" Width="16" Height="16"/>
                                        </Button>
                                        <Button Classes="IconBtn" 
                                                Command="{Binding $parent[UserControl].((vm:TrainingViewModel)DataContext).ViewCertificateCommand}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding HasCertificate}"
                                                ToolTip.Tip="View Certificate">
                                            <PathIcon Data="{StaticResource IconView}" Width="16" Height="16"/>
                                        </Button>
                                        <Button Classes="IconBtn" 
                                                Command="{Binding $parent[UserControl].((vm:TrainingViewModel)DataContext).DeleteRecordCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Delete Record">
                                            <PathIcon Data="{StaticResource IconDelete}" Width="16" Height="16" Foreground="Red"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Add New Form -->
                <Border Grid.Column="1" Classes="Card" Padding="20" IsVisible="{Binding Editor.IsOpen}" Width="320">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="15" Margin="0,0,10,0">
                            <TextBlock Text="Add Training Record" Classes="H2" Margin="0,0,0,10"/>
                            
                            <StackPanel>
                                <TextBlock Text="Employee Name" Classes="FormLabel"/>
                                <AutoCompleteBox ItemsSource="{Binding Editor.Employees}"
                                                 SelectedItem="{Binding Editor.SelectedEmployee}"
                                                 Text="{Binding Editor.NewRecord.EmployeeName}"
                                                 Watermark="Search Employee..."
                                                 FilterMode="Contains"
                                                 ValueMemberBinding="{Binding DisplayName, DataType=models:Employee}">
                                    <AutoCompleteBox.ItemTemplate>
                                        <DataTemplate DataType="models:Employee">
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </AutoCompleteBox.ItemTemplate>
                                </AutoCompleteBox>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="Skill / Role" Classes="FormLabel"/>
                                <TextBox Watermark="e.g. Supervisor" Text="{Binding Editor.NewRecord.Role}" Classes="FormInput" IsEnabled="False"/>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="Certificate Type" Classes="FormLabel"/>
                                <ComboBox ItemsSource="{Binding Editor.CertificateTypes}" 
                                          SelectedItem="{Binding Editor.NewRecord.CertificateType}"
                                          PlaceholderText="Select Type..."
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>
                                      
                            <StackPanel>
                                <TextBlock Text="Issue Date" Classes="FormLabel"/>
                                <CalendarDatePicker SelectedDate="{Binding Editor.NewRecord.DateCompleted}" HorizontalAlignment="Stretch"/>
                            </StackPanel>
    
                            <StackPanel>
                                <TextBlock Text="Expiry Date" Classes="FormLabel"/>
                                <CalendarDatePicker SelectedDate="{Binding Editor.NewRecord.ValidUntil}" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="Trainer / Provider" Classes="FormLabel"/>
                                <AutoCompleteBox ItemsSource="{Binding Editor.Trainers}" 
                                                 Text="{Binding Editor.NewRecord.Trainer}" 
                                                 Watermark="e.g. Red Cross"
                                                 FilterMode="Contains" />
                            </StackPanel>
    
                            <StackPanel Spacing="5">
                                <TextBlock Text="Certificate Document" Classes="FormLabel"/>
                                <Button Content="Upload Certificate" 
                                        Command="{Binding Editor.UploadCertificateCommand}"
                                        Classes="Secondary"
                                        HorizontalAlignment="Stretch"/>
                                <TextBlock Text="{Binding Editor.CertificateFileName}" 
                                           Foreground="{DynamicResource TextSecondary}" 
                                           FontSize="12" 
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
    
                            <Grid ColumnDefinitions="*, *" Margin="0,20,0,0">
                                <Button Grid.Column="0" Content="Clear" 
                                        Command="{Binding Editor.ClearFormCommand}" 
                                        Classes="Cancel"
                                        Margin="0,0,5,0"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding Editor.SaveTrainingCommand}" 
                                        Classes="Primary" 
                                        Margin="5,0,0,0">
                                    <TextBlock Text="{Binding Editor.IsEditMode, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Update|Save'}"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
