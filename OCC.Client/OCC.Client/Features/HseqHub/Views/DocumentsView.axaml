<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:OCC.Client.Features.HseqHub.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OCC.Client.Features.HseqHub.Views.DocumentsView"
             x:DataType="vm:DocumentsViewModel">
    <Grid Background="{DynamicResource AppBackgroundSlate}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="0" RowDefinitions="Auto, *">
            <!-- Header -->
            <Border Grid.Row="0" Margin="24">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Document Control" Classes="H1"/>
                        <TextBlock Text="Policies, Templates, and Registers" Classes="TextSecondary"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Classes="PrimaryButton" Command="{Binding ToggleUploadFormCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{StaticResource IconPlus}" Width="16" Height="16"/>
                            <TextBlock Text="UPLOAD NEW"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="AttachedToVisualTree">
                    <InvokeCommandAction Command="{Binding LoadDocumentsCommand}"/>
                </EventTriggerBehavior>
            </Interaction.Behaviors>

            <!-- Loading -->
            <StackPanel Grid.Row="1" IsVisible="{Binding IsBusy}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Classes="Circular" IsIndeterminate="True"/>
                <TextBlock Text="Loading documents..." Margin="0,10,0,0"/>
            </StackPanel>

            <!-- List -->
            <ScrollViewer Grid.Row="1" Padding="24,0,24,24" IsVisible="{Binding !IsBusy}">
                <ItemsControl ItemsSource="{Binding Documents}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Classes="Card" Width="220" Margin="0,0,16,16" Padding="16">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Delete Document" 
                                                  Command="{Binding $parent[UserControl].((vm:DocumentsViewModel)DataContext).DeleteDocumentCommand}" 
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <PathIcon Data="{StaticResource IconDelete}" Foreground="{DynamicResource ErrorRed}"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <StackPanel Spacing="12">
                                    <Grid ColumnDefinitions="*, Auto">
                                         <Border CornerRadius="4" Background="#E0F2F1" Padding="8">
                                             <PathIcon Data="{StaticResource IconDocument}" Foreground="{DynamicResource PrimaryTeal}" Width="24" Height="24"/>
                                         </Border>
                                         <Button Grid.Column="1" Classes="IconOnlyButton" Command="{Binding $parent[UserControl].((vm:DocumentsViewModel)DataContext).DeleteDocumentCommand}" CommandParameter="{Binding}">
                                             <PathIcon Data="{StaticResource IconDelete}" Width="14" Height="14" Foreground="#B0BEC5"/>
                                         </Button>
                                    </Grid>
                                    
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Category}" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
                                    </StackPanel>

                                    <Border Height="1" Background="{DynamicResource BorderColor}"/>

                                    <Grid ColumnDefinitions="*, Auto">
                                        <TextBlock Text="{Binding UploadDate, StringFormat='d MMM yyyy'}" FontSize="11" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Classes="LinkButton" Content="Download" FontSize="12"
                                                Command="{Binding $parent[UserControl].((vm:DocumentsViewModel)DataContext).DownloadDocumentCommand}" CommandParameter="{Binding}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Upload Side Panel -->
        <Border Grid.Column="1" Background="{DynamicResource CardBackground}" 
                BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,0,0,0"
                IsVisible="{Binding ShowUploadForm}">
            <Grid RowDefinitions="Auto, *">
                <Border Grid.Row="0" Padding="24" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderColor}">
                     <Grid ColumnDefinitions="*, Auto">
                        <TextBlock Text="Upload Document" Classes="H2"/>
                        <Button Grid.Column="1" Classes="IconOnlyButton" Command="{Binding ToggleUploadFormCommand}">
                            <PathIcon Data="{StaticResource IconClose}" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="20" Margin="24">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Document Title" Classes="FormLabel"/>
                            <TextBox Watermark="e.g. Health &amp; Safety Policy 2025" Text="{Binding NewDocTitle}"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Category" Classes="FormLabel"/>
                            <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding NewDocCategory}" HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="File" Classes="FormLabel"/>
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBox Text="{Binding SelectedFilePath}" IsReadOnly="True" Watermark="No file selected..."/>
                                <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0" Command="{Binding PickFileCommand}"/>
                            </Grid>
                        </StackPanel>

                        <Button Classes="PrimaryButton" HorizontalAlignment="Stretch" Margin="0,20,0,0" 
                                Command="{Binding UploadCommand}" IsEnabled="{Binding !IsUploading}">
                             <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                 <PathIcon Data="{StaticResource IconUpload}" Width="16" Height="16"/>
                                 <TextBlock Text="UPLOAD DOCUMENT"/>
                             </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</UserControl>
