<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:OCC.Client"
             xmlns:conv="using:OCC.Client.Converters"
             x:Class="OCC.Client.App"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Themes/LightMode.axaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:StatusColorConverter x:Key="StatusToColorConverter"/>
            <conv:TypeToColorConverter x:Key="TypeToColorConverter"/>
            <conv:BugStatusBadgeConverter x:Key="BugStatusBadgeConverter"/>
            <conv:GuidToBoolConverter x:Key="GuidToBoolConverter"/>
            <conv:EmployeeToNameConverter x:Key="EmployeeToNameConverter"/>
            <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <conv:DoubleToStarGridLengthConverter x:Key="DoubleToStarGridLengthConverter"/>
            <conv:BranchToColorConverter x:Key="BranchToColorConverter"/>
            <conv:StringToTitleCaseConverter x:Key="StringToTitleCaseConverter"/>
            <conv:StringEqualityConverter x:Key="StringEqualityConverter"/>
            <conv:EqualsConverter x:Key="EqualsConverter"/>

            <!-- Font Sizes -->
            <x:Double x:Key="FontSizeXS">10</x:Double>
            <x:Double x:Key="FontSizeSmall">12</x:Double>
            <x:Double x:Key="FontSizeNormal">14</x:Double>
            <x:Double x:Key="FontSizeLarge">18</x:Double>
            <x:Double x:Key="FontSizeXLarge">24</x:Double>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme DensityStyle="Compact" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <StyleInclude Source="avares://OCC.Client/Styles/AppStyles.axaml" />        
        <StyleInclude Source="avares://OCC.Client/Styles/Controls.axaml" />
    </Application.Styles>
</Application>
