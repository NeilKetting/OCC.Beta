<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:OCC.Client.Views"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        Width="400" SizeToContent="Height"
        x:Class="OCC.Client.Views.TextInputDialog"
        x:DataType="views:TextInputDialog"
        Title="Input Required"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="BorderOnly"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur">

    <Border Background="{DynamicResource SurfaceWhite}" CornerRadius="12" BorderBrush="{DynamicResource BorderGray}" BorderThickness="1" Padding="20">
        <StackPanel Spacing="15">
            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
            
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryGray}"/>

            <TextBox Name="InputBox" Watermark="Enter value..." Text="{Binding InputValue, Mode=TwoWay}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                <Button Content="Cancel" Classes="Secondary" Click="Cancel_Click"/>
                <Button Content="OK" Classes="Primary" Click="OK_Click" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
