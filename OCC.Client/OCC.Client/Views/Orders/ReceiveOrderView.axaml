<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OCC.Client.ViewModels.Orders"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
			 xmlns:conv="clr-namespace:OCC.Client.Converters"
             x:Name="Root"
             x:Class="OCC.Client.Views.Orders.ReceiveOrderView"
             x:DataType="vm:ReceiveOrderViewModel">

    <UserControl.Resources>
        <conv:MathConverter x:Key="MathConverter" />
    </UserControl.Resources>

    <Border Background="White" CornerRadius="8" BoxShadow="0 4 15 0 #40000000" Margin="20,10,40,20" BorderBrush="{DynamicResource ThemeBorderLow}" BorderThickness="1"
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxWidth="1000">
        <Grid RowDefinitions="Auto, *, Auto">

            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource ThemeBorderLow}" BorderThickness="0,0,0,1" Padding="20">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Spacing="5">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Receive Order" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryDark}"/>
                            <TextBlock Text="{Binding Order.OrderNumber}" FontSize="20" Foreground="{DynamicResource TextSecondaryGray}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Order.SupplierName, StringFormat='Supplier: {0}'}" FontSize="14" Foreground="{DynamicResource TextSecondaryGray}" IsVisible="{Binding Order.SupplierName, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                    </StackPanel>

                    <Button Grid.Column="1" Command="{Binding CancelCommand}" Classes="IconButton">
                         <PathIcon Data="{StaticResource IconClose}" Width="16"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20" Margin="20,20,20,50">
                    <Border Background="#FFF7ED" BorderBrush="#FDBA74" BorderThickness="1" CornerRadius="4" Padding="15">
                        <Grid ColumnDefinitions="Auto, *">
                             <PathIcon Grid.Column="0" Data="{StaticResource IconInfo}" Foreground="#EA580C" Width="20" VerticalAlignment="Center"/>
                             <TextBlock Grid.Column="1" Text="Enter the quantity received for each item. This will update inventory levels immediately." VerticalAlignment="Center" Foreground="#9A3412" TextWrapping="Wrap" MaxWidth="450" Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <Grid ColumnDefinitions="*, Auto">
                         <TextBlock Text="Items Pending Receipt" FontSize="16" FontWeight="SemiBold"/>
                         <Button Grid.Column="1" Command="{Binding ReceiveAllCommand}" Content="Receive All Remaining" Classes="Secondary" FontSize="12"/>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding OrderItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" Padding="15" BorderBrush="{DynamicResource ThemeBorderLow}" BorderThickness="1" CornerRadius="4" Background="White">
                                    <Grid ColumnDefinitions="*, 15, 80, 15, 80, 15, 100, 15, 80">
                                        <!-- Item Info -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Description}" FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="SKU:" FontSize="12" Foreground="{DynamicResource ThemeForegroundLow}"/>
                                                <TextBlock Text="{Binding ItemCode}" FontSize="12" Foreground="{DynamicResource TextPrimaryDark}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Ordered -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="Ordered" FontSize="10" Foreground="{DynamicResource ThemeForegroundLow}" HorizontalAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding QuantityOrdered}"/>
                                                <TextBlock Text="{Binding SourceLine.UnitOfMeasure}" Foreground="{DynamicResource ThemeForegroundLow}"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Previous -->
                                        <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                            <TextBlock Text="Received" FontSize="10" Foreground="{DynamicResource ThemeForegroundLow}" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding QuantityReceivedSoFar}" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Input -->
                                        <StackPanel Grid.Column="6" VerticalAlignment="Center">
                                            <TextBlock Text="RECEIVE NOW" FontSize="10" FontWeight="Bold" Foreground="{DynamicResource PrimaryTeal}" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                            <TextBox Text="{Binding ReceiveNow}" Classes="FormInput" TextAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Remaining -->
                                         <StackPanel Grid.Column="8" VerticalAlignment="Center">
                                            <TextBlock Text="Remaining" FontSize="10" Foreground="{DynamicResource ThemeForegroundLow}" HorizontalAlignment="Center"/>
                                             <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding NewRemaining}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding SourceLine.UnitOfMeasure}" Foreground="{DynamicResource ThemeForegroundLow}"/>
                                            </StackPanel>
                                        </StackPanel>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
             <Border Grid.Row="2" Background="#F8FAFC" BorderBrush="{DynamicResource ThemeBorderLow}" BorderThickness="0,1,0,0" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="15">
                    <Button Command="{Binding CancelCommand}" Content="Cancel" Classes="Secondary" Width="100"/>
                    <Button Command="{Binding SubmitReceivingCommand}" Content="CONFIRM RECEIPT" Classes="Primary" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <!-- Loading Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="3" Background="#80FFFFFF" IsVisible="{Binding IsBusy}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Foreground="{DynamicResource OCCOrange}"/>
                    <TextBlock Text="{Binding BusyText}" HorizontalAlignment="Center" Margin="0,10,0,0" Classes="LabelSmall"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
