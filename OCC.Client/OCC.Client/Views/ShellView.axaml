<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OCC.Client.ViewModels"
             xmlns:viewsShared="using:OCC.Client.Views.Shared"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="OCC.Client.Views.ShellView"
             x:DataType="vm:ShellViewModel">

    <Grid ColumnDefinitions="Auto, *">
        <!-- Sidebar -->
        <viewsShared:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}"/>

        <!-- Page Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
    </Grid>
</UserControl>
