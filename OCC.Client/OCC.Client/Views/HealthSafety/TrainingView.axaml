<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:OCC.Client.ViewModels.HealthSafety"
             xmlns:conv="clr-namespace:OCC.Client.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OCC.Client.Views.HealthSafety.TrainingView"
             x:DataType="vm:TrainingViewModel">

    <Grid Background="{DynamicResource AppBackgroundSlate}">
        <Grid RowDefinitions="Auto, *">
            <!-- Header -->
            <Border Grid.Row="0" Classes="TopHeader" Margin="10,10,10,0">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource IconManageEmployees}" Width="24" Height="24" Foreground="{DynamicResource PrimaryTeal}"/>
                    <TextBlock Text="Training Matrix" Classes="H1" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Data Table -->
            <Grid Grid.Row="1" ColumnDefinitions="*, 300" Margin="10">
                
                <!-- Main List -->
                <Border Grid.Column="0" Classes="Card" Margin="0,0,10,0">
                    <Grid RowDefinitions="Auto, *">
                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10">
                             <TextBlock Text="Expiry Warning (Days):" VerticalAlignment="Center"/>
                             <NumericUpDown Value="{Binding ExpiryWarningDays}" Minimum="1" Maximum="365" Width="80"/>
                             <Button Content="Show Expiring" Command="{Binding FilterExpiringCommand}" Classes="Secondary"/>
                             <Button Content="Reset/Reload" Command="{Binding LoadDataCommand}" Classes="Ghost"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding TrainingRecords}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                        <DataGridTextColumn Header="Topic" Binding="{Binding TrainingTopic}" Width="2*"/>
                        <DataGridTextColumn Header="Completed" Binding="{Binding DateCompleted, StringFormat='d MMM yyyy'}" Width="*"/>
                        
                        <!-- Validity with Conditional Formatting Logic would go here (using Converter for color) -->
                        <DataGridTextColumn Header="Valid Until" Binding="{Binding ValidUntil, StringFormat='d MMM yyyy'}" Width="*"/>
                        
                        <DataGridTextColumn Header="Trainer" Binding="{Binding Trainer}" Width="*"/>
                        
                        <!-- Actions -->
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Classes="IconBtn" ToolTip.Tip="View Certificate">
                                        <PathIcon Data="{StaticResource IconView}" Width="16" Height="16"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Add New Form -->
                <Border Grid.Column="1" Classes="Card">
                    <StackPanel Spacing="10" Margin="10">
                        <TextBlock Text="Add Training Record" Classes="H2" Margin="0,0,0,10"/>
                        
                        <TextBox Watermark="Employee Name" Text="{Binding NewRecord.EmployeeName}"/>
                        <TextBox Watermark="Role / Position" Text="{Binding NewRecord.Role}"/>
                        
                        <TextBlock Text="Certificate Type" Classes="Label"/>
                        <ComboBox ItemsSource="{Binding CertificateTypes}" 
                                  SelectedItem="{Binding NewRecord.CertificateType}"
                                  PlaceholderText="Select Certificate..."
                                  HorizontalAlignment="Stretch"/>
                                  
                        <TextBlock Text="Date Completed" Classes="Label"/>
                        <CalendarDatePicker SelectedDate="{Binding NewRecord.DateCompleted}" HorizontalAlignment="Stretch"/>
                        
                        <TextBlock Text="Trainer / Provider" Classes="Label"/>
                        <TextBox Watermark="e.g. Red Cross" Text="{Binding NewRecord.Trainer}"/>

                        <Button Content="Save Record" 
                                Command="{Binding SaveTrainingCommand}" 
                                Classes="Primary" 
                                HorizontalAlignment="Stretch" 
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
