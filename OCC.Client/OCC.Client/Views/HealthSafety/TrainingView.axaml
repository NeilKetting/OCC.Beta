<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:OCC.Client.ViewModels.HealthSafety"
             xmlns:conv="clr-namespace:OCC.Client.Converters"
             xmlns:models="using:OCC.Shared.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OCC.Client.Views.HealthSafety.TrainingView"
             x:DataType="vm:TrainingViewModel">

    <Grid Background="{DynamicResource AppBackgroundSlate}">
        <Grid RowDefinitions="Auto, *">
            <!-- Header -->
            <!-- Header Bar: Title -->
            <Border Grid.Row="0" Margin="10" Background="{DynamicResource WeatheredCementGradient}" Classes="TopHeader">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <PathIcon Data="{StaticResource IconManageEmployees}" Width="24" Height="24" Foreground="{DynamicResource PrimaryTeal}"/>
                        <TextBlock Text="Training Matrix" Classes="H1" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Table -->
            <Grid Grid.Row="1" ColumnDefinitions="*, 300" Margin="10">
                
                <!-- Main List -->
                <Border Grid.Column="0" Classes="Card" Margin="0,0,10,0">
                    <Grid RowDefinitions="Auto, *">
                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10">
                             <TextBlock Text="Expiry Warning (Days):" VerticalAlignment="Center"/>
                             <NumericUpDown Value="{Binding ExpiryWarningDays}" Minimum="1" Maximum="365" Width="120"/>
                             <Button Content="Show Expiring" Command="{Binding FilterExpiringCommand}" Classes="Secondary"/>
                             <Button Content="Reset/Reload" Command="{Binding LoadDataCommand}" Classes="Ghost"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding TrainingRecords}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*" MinWidth="180"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="Auto"/>
                        <DataGridTextColumn Header="Topic" Binding="{Binding TrainingTopic}" Width="*" MinWidth="250"/>
                        <DataGridTextColumn Header="Issue Date" Binding="{Binding DateCompleted, StringFormat='d MMM yyyy'}" Width="Auto"/>
                        <DataGridTextColumn Header="Expiry Date" Binding="{Binding ValidUntil, StringFormat='d MMM yyyy'}" Width="Auto"/>
                        <DataGridTextColumn Header="Validity" Binding="{Binding ValidityStatus}" Width="Auto"/>
                        <DataGridTextColumn Header="Trainer" Binding="{Binding Trainer}" Width="Auto"/>

                        <!-- Actions -->
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Classes="IconBtn" ToolTip.Tip="View Certificate">
                                        <PathIcon Data="{StaticResource IconView}" Width="16" Height="16"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Add New Form -->
                <Border Grid.Column="1" Classes="Card">
                    <StackPanel Spacing="10" Margin="10">
                        <TextBlock Text="Add Training Record" Classes="H2" Margin="0,0,0,10"/>
                        
                        <AutoCompleteBox ItemsSource="{Binding Employees}"
                                         SelectedItem="{Binding SelectedEmployee}"
                                         Text="{Binding NewRecord.EmployeeName}"
                                         Watermark="Employee Name"
                                         FilterMode="Contains"
                                         ValueMemberBinding="{Binding DisplayName, DataType=models:Employee}">
                            <AutoCompleteBox.ItemTemplate>
                                <DataTemplate DataType="models:Employee">
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </DataTemplate>
                            </AutoCompleteBox.ItemTemplate>
                        </AutoCompleteBox>
                        
                        <TextBox Watermark="Skill" Text="{Binding NewRecord.Role}" IsReadOnly="False"/>
                        
                        <TextBlock Text="Certificate Type" Classes="Label"/>
                        <ComboBox ItemsSource="{Binding CertificateTypes}" 
                                  SelectedItem="{Binding NewRecord.CertificateType}"
                                  PlaceholderText="Select Certificate..."
                                  HorizontalAlignment="Stretch"/>
                                  
                        <TextBlock Text="Issue Date" Classes="Label"/>
                        <CalendarDatePicker SelectedDate="{Binding NewRecord.DateCompleted}" HorizontalAlignment="Stretch"/>

                        <TextBlock Text="Expiry Date" Classes="Label"/>
                        <CalendarDatePicker SelectedDate="{Binding NewRecord.ValidUntil}" HorizontalAlignment="Stretch"/>
                        
                        <TextBlock Text="Trainer / Provider" Classes="Label"/>
                        <TextBox Watermark="e.g. Red Cross" Text="{Binding NewRecord.Trainer}"/>

                        <Button Content="Upload Certificate" 
                                Command="{Binding UploadCertificateCommand}"
                                Classes="Secondary"
                                HorizontalAlignment="Stretch"/>
                        <TextBlock Text="{Binding CertificateFileName}" 
                                   Foreground="{DynamicResource TextSecondary}" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"/>

                        <Button Content="Save Record" 
                                Command="{Binding SaveTrainingCommand}" 
                                Classes="Primary" 
                                HorizontalAlignment="Stretch" 
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
