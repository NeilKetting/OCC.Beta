<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="OCC.Client.Views.Projects.GanttMenuBarView">

    <Border Background="{DynamicResource SurfaceBackground}" BorderBrush="{DynamicResource BorderGray}" BorderThickness="0,0,0,1" Padding="10,5">
        <Grid ColumnDefinitions="Auto, *, Auto">
            
            <!-- Left Controls: Filter / View Options -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Button Classes="SubtleButton" Padding="8,5">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <PathIcon Data="{StaticResource IconFilter}" Width="14" Height="14"/>
                        <TextBlock Text="Filter" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Classes="SubtleButton" Padding="8,5">
                     <StackPanel Orientation="Horizontal" Spacing="5">
                        <PathIcon Data="{StaticResource IconEye}" Width="14" Height="14"/>
                        <TextBlock Text="View" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Right Controls: Zoom and Date Navigation -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                <Button Content="Today" Classes="OutlineButton" Padding="10,5"/>
                
                <Border Background="{DynamicResource FieldBackground}" CornerRadius="4" BorderBrush="{DynamicResource BorderGray}" BorderThickness="1" Padding="2">
                     <StackPanel Orientation="Horizontal">
                        <Button Classes="IconOnlyButton" Padding="5">
                             <TextBlock Text="-" FontWeight="Bold"/>
                        </Button>
                         <TextBlock Text="Zoom" VerticalAlignment="Center" Margin="5,0"/>
                        <Button Classes="IconOnlyButton" Padding="5">
                             <TextBlock Text="+" FontWeight="Bold"/>
                        </Button>
                     </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
