<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="OCC.Client.TestMainView">


	<Grid RowDefinitions="50, *">
		<!-- Top Bar -->
		<Border Grid.Row="0" Classes="Topbar">
			<Grid ColumnDefinitions="Auto, *, Auto, Auto">
				<!-- Tab Buttons -->
				<StackPanel Grid.Column="0" Orientation="Horizontal" 
											HorizontalAlignment="Center">
				</StackPanel>
			</Grid>
		</Border>

        <!-- Main Content Area -->
        <TransitioningContentControl Grid.Row="1">
            <TransitioningContentControl.PageTransition>
                <CrossFade Duration="0:00:00.500" />
            </TransitioningContentControl.PageTransition>
            <TransitioningContentControl.DataTemplates>
                <!--<DataTemplate DataType="{x:Type vm:EmployeeManagementViewModel}">
                    <views:EmployeeListView />
                </DataTemplate>-->
            </TransitioningContentControl.DataTemplates>
        </TransitioningContentControl>		
	</Grid>


</UserControl>
